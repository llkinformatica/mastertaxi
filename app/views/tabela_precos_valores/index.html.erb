<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Tabela precos valor</h1>
    <%= link_to 'New tabela precos valor', new_tabela_precos_valor_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="tabela_precos_valores" class="min-w-full">
    <%= render @tabela_precos_valores %>
  </div>
</div>
