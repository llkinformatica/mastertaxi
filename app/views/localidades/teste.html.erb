<div class="flex flex-col w-full bg-white text-gray-600 shadow">
   
  <div class="flex justify-between h-16 content-center items-center">
    <p class="py-2 mx-4 text-4xl">Exibindo Localidade</p>
    <%= render 'botoes' %>
  </div>

</div>

<div class="w-3/4 my-4 mx-auto px-4 md:px-12">
    <div id="" class="bg-white shadow px-5 py-2 border border-1 border-gray-500 rounded m-5 w-full">
        <li class="flex items-center bg-white p-2 hover:shadow-lg rounded cursor-pointer transition">
            <div class="flex flex-col ml-2 w-full" data-controller="maps" data-action="google-maps-callback@window->maps#initializeMap">
                <p><%= @localidades.id %></p>
                <p><%= @localidades.nome %></p>
		<p><%= @localidades.latitude %></p>
		<p><%= @localidades.longitude %></p>
		<%= content_tag :div, nil, data: { target: "maps.map" }, class: 'map' %>
            </div>
        </li>
    </div>
</div>