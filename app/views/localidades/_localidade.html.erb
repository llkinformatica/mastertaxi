<div id="<%= dom_id localidade %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Nome:</strong>
    <%= localidade.nome %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Latitude:</strong>
    <%= localidade.latitude %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Longitude:</strong>
    <%= localidade.longitude %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this localidade", localidade, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this localidade', edit_localidade_path(localidade), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
